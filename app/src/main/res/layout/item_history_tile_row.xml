<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_tile_bg"
    android:padding="10dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    >
    <ImageView
        android:id="@+id/iv_status"
        android:layout_marginTop="8dp"
        android:paddingVertical="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blue_check"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Aug 2021"
            android:gravity="center_horizontal"
            android:textColor="@color/color_txt"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tv_fromName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cathrine Hillard"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tv_toName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenny Red"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$155.68"
                    android:gravity="left"
                    android:textColor="@color/color_txt"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>